<!DOCTYPE html>
<html>
<head>
    <title>Novo Jogo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light container mt-5">
    <div class="card shadow mx-auto" style="max-width: 600px;">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0">Cadastrar Novo Jogo</h4>
        </div>
        <div class="card-body">
            <form action="/jogos/novo" method="POST">
                <div class="mb-3">
                    <label class="form-label">TÃ­tulo</label>
                    <input type="text" name="titulo" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Plataforma</label>
                    <input type="text" name="plataforma" class="form-control" placeholder="Ex: PC, Xbox, Switch" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Dono do Jogo</label>
                    <select name="amigoId" class="form-select" required>
                        <% amigos.forEach(amigo => { %>
                            <option value="<%= amigo.id %>"><%= amigo.nome %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success">Salvar</button>
                    <a href="/jogos" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>