<!DOCTYPE html>
<html>
<head>
    <title>Novo Empréstimo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light container mt-5">
    <div class="card shadow mx-auto" style="max-width: 600px;">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">Registrar Empréstimo</h4>
        </div>
        <div class="card-body">
            <form action="/emprestimos/novo" method="POST">
                <div class="mb-3">
                    <label class="form-label">Qual jogo?</label>
                    <select name="jogoId" class="form-select" required>
                        <% jogos.forEach(jogo => { %>
                            <option value="<%= jogo.id %>"><%= jogo.titulo %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label">Quem vai pegar?</label>
                    <select name="amigoId" class="form-select" required>
                        <% amigos.forEach(amigo => { %>
                            <option value="<%= amigo.id %>"><%= amigo.nome %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Data Início</label>
                        <input type="date" name="dataInicio" class="form-control" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Data Devolução (Opcional)</label>
                        <input type="date" name="dataFim" class="form-control">
                    </div>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Emprestar</button>
                    <a href="/emprestimos" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>